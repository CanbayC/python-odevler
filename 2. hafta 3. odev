dosya=open("OgrenciNotHesaplama.txt", "w")
print("OGRENCI NOT ORTALAMA PROGRAMI")
print("-"*11, "ZAFER", "-"*11, end="\n\n")
ad=input("Adiniz\t:")
soyad=input("Soyadiniz\t:")
vize=float(input("Vize notunuz (0-100 arasi bir puan yaziniz)\t:"))
final=float(input("Final notunuz (0-100 arasi bir puan yaziniz)\t:"))
devam=float(input("20 dersin kacina katilamadiniz\t:"))
ortalama=(vize*0.3)+(final*0.5)+((100-(devam*5))*0.2)
print("Yilsonu ortalamaniz", ortalama,"'dir.")
print(" Adi\t:", ad, "\n", "Soyadi\t:", soyad, "\n", "Vize notu\t:", vize, "\n", "Final notu\t:", final, "\n", "Katilmadigi ders sayisi(../20)\t:", devam, "\n", "Yilsonu not ortalamasi\t:", ortalama, "\n", file=dosya)
dosya.close()
